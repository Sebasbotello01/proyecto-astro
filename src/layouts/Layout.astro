---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<div class="top-header container">
				<img src="https://http2.mlstatic.com/frontend-assets/ml-web-navigation/ui-navigation/6.6.73/mercadolibre/logo_large_25years_v2.png">
				<div class="input">
					<input placeholder="escribe algo y encuentra" />
					<button><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
						<path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
					  </svg>
					  </button>
				</div>
				<p>publicidad</p>
			</div>
		</header>
		<div class ="banner">

		</div>

		<div class="cards container">
			<div class="card">
				1
			</div>
			<div class="card">
				2
			</div>
			<div class="card">
				3
			</div>
			<div class="card">
				4
			</div>
			<div class="card">
				5
			</div>
			<div class="card">
				6
			</div>
		</div>
		<!-- <slot /> -->
	</body>
</html>
<style>
	html,body{
		padding: 0;
		margin: 0;
		background-color: rgb(192, 189, 189) ;
	}
	header{
		height: 80px;
		background: rgb(238, 222, 5);
		padding-top: 12px;
	}
	header img{
		width: 120px;
	}
	header input{
		box-sizing: border-box;
		width: 80%;
		display: inline-block;
		padding: 10px 8px;
		border-top-right-radius: 3px;
		border-bottom-left-radius: 3px;
		border: none;
		height:30px;
		/* border: 1px solid rgb(110, 106, 106); */
		outline: none;
	}
	.header button{
		display: inline-block;
		width: 32px;
		border: none;
		background: #fff;
		height: 30px;
	}
	.input{
		display: flex;
		alaing-items: center;
	}
	.banner{
		height: 280px;
		background: linear-gradient(to bottom,rgb(238, 222, 5) 60%, rgb(192, 189, 189) 100%);
	}
	.container{
		max-width: 1200px;
		margin:0 auto;
	}
	.cards{
		gap: 10px;
		display: flex;
		/* column-count: 6; */
		/* column-gap: ;*/
		margin-top: -80px;
		height: 240px;
	}
	.card{
		/* min-width: 180px; */
		flex-grow: 1;
		background-color: white;
		border-radius: 6px;
	}
	.top-header{
		column-count: 3;
	}
</style>
